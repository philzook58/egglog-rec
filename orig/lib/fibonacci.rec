REC-SPEC Fibonacci

# common definitions to be included in the fibonacci*.rec benchmarks

SORTS
  Nat
CONS
  d0 : -> Nat            # zero
  s : Nat -> Nat         # successor
OPNS
  plus : Nat Nat -> Nat  # addition
  fibb : Nat -> Nat      # Fibbonaci
VARS
  N M : Nat
RULES
  plus(d0, N) -> N
  plus(s(N), M) -> s(plus(N, M))
  fibb(d0) -> d0         # corrected by CONVECS
  fibb(s(d0)) -> s(d0)
  fibb(s(s(N))) -> plus(fibb(s(N)), fibb(N))
EVAL
END-SPEC

